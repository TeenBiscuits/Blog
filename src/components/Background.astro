<div class="background-container">
    {
        emojis.map((emoji) => (
            <span
                class="emoji"
                style={`top: ${Math.random() * 100}%; animation-delay: ${Math.random() * -30}s; animation-duration: ${20 + Math.random() * 20}s;`}
            >
                {emoji}
            </span>
        ))
    }
</div>

<style>
    .background-container {
        position: fixed;
        inset: 0;
        overflow: hidden;
        z-index: 1;
        pointer-events: none;
    }

    .emoji {
        position: absolute;
        font-size: 3rem;
        opacity: 0.15;
        filter: grayscale(1) brightness(1.5);
        animation: floatAcross 30s linear infinite;
        will-change: transform;
    }

    @media (prefers-color-scheme: dark) {
        .emoji {
            filter: grayscale(1) brightness(0.4);
        }
    }

    @keyframes floatAcross {
        from {
            transform: translateX(-10vw) rotate(-15deg);
        }
        to {
            transform: translateX(110vw) rotate(-15deg);
        }
    }

    @media (max-width: 768px) {
        .emoji {
            font-size: 2rem;
            opacity: 0.12;
        }
    }

    @media (max-width: 480px) {
        .emoji {
            font-size: 1.5rem;
            opacity: 0.1;
        }
    }

    @media (max-width: 320px) {
        .emoji {
            font-size: 1.2rem;
        }
    }
</style>
