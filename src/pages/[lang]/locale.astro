---
import { SITE_BASE } from '@/consts'
import { LOCALES, useTranslations, type Lang } from '@/i18n'
const t = useTranslations(Astro.currentLocale as Lang)
import Layout from '@/layouts/Base.astro'

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}))
---

<Layout>
	<main class="app-container pt-36">
		<h1 class="text-6xl pb-2 font-serif font-bold">
			{t({ es: 'Elige Idioma', gl: 'Escolle Idioma', en: 'Choose Language' })}
		</h1>
	</main>
	<section class="app-container py-24">
		<div class="flex flex-col md:flex-row justify-center gap-12 md:gap-30">
			{
				Object.entries(LOCALES).map(([lang, config]) => (
					<div>
						<a
							class="text-4xl item-center hover:text-primary dark:text-primary-dark"
							href={`${SITE_BASE}/${lang}/`}
							data-umami-event={`${config.label} Locale Change`}
						>
							{config.emogi} {config.label}
						</a>
					</div>
				))
			}
		</div>
	</section>
</Layout>
